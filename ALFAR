// Online C# Editor for free
using System;

namespace BasicCalculator
{
    class Program
    {
        static void Main(string[] args)
        {
            // Step 2: Display name and title
            Console.WriteLine("   John Dave P. Alfar");
            Console.WriteLine("***********************************");
            Console.WriteLine("   Your Name - Basic Calculator    ");
            Console.WriteLine("***********************************\n");

            // Step 3: Prompt the user to enter two numbers
            Console.Write("Enter the first number: ");
            double num1 = Convert.ToDouble(Console.ReadLine());

            Console.Write("Enter the second number: ");
            double num2 = Convert.ToDouble(Console.ReadLine());

            // Step 4: Prompt the user to choose an operator
            Console.Write("Choose an operator (+, -, *, /): ");
            char op = Convert.ToChar(Console.ReadLine());

            double result = 0;
            bool validOperation = true;

            // Step 5: Use switch to perform the operation
            switch (op)
            {
                case '+':
                    result = num1 + num2;
                    break;

                case '-':
                    result = num1 - num2;
                    break;

                case '*':
                    result = num1 * num2;
                    break;

                case '/':
                    // Step 6: Handle division by zero
                    if (num2 == 0)
                    {
                        Console.WriteLine("Error: Division by zero is not allowed.");
                        validOperation = false;
                    }
                    else
                    {
                        result = num1 / num2;
                    }
                    break;

                default:
                    Console.WriteLine("Invalid operator selected.");
                    validOperation = false;
                    break;
            }

            // Step 7: Display the result
            if (validOperation)
            {
                Console.WriteLine($"\nResult: {num1} {op} {num2} = {result}");
            }

            Console.WriteLine("\nPress any key to exit...");
            Console.ReadKey();
        }
    }
}
