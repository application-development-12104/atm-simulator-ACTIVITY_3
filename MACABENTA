using System;

class CalculatorProgram
{
    static void Main()
    {
        Console.WriteLine("Basic Calculator Program by [Mary Rose C. Macabenta]\n");

        Console.Write("Enter the first number: ");
        double first = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter the second number: ");
        double second = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter an operator (+, -, *, /): ");
        string symbol = Console.ReadLine();

        Console.WriteLine();

        if (symbol == "+")
        {
            Console.WriteLine($"The result of {first} + {second} is: {first + second}\n");
        }
        else if (symbol == "-")
        {
            Console.WriteLine($"The result of {first} - {second} is: {first - second}\n");
        }
        else if (symbol == "*")
        {
            Console.WriteLine($"The result of {first} * {second} is: {first * second}\n");
        }
        else if (symbol == "/")
        {
            if (second == 0)
            {
                Console.WriteLine("Error: Division by zero is not allowed.\n");
            }
            else
            {
                Console.WriteLine($"The result of {first} / {second} is: {first / second}\n");
            }
        }
        else
        {
            Console.WriteLine("Error: Invalid operator.\n");
        }

        Console.WriteLine("Thank you for using the calculator!");
    }
}
